{
  "name": "qmk_configurator_electron",
  "version": "0.1.0",
  "main": "./src/main.js",
  "author": {
    "name": "ELliot Powell",
    "email": "johnp8727@gmail.com"
  },
  "description": "A layout building and flashing tool for QMK firmware",
  "repository": "https://github.com/e11i0t23/qmk_configurator_electron.git",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron ./src/main",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish onTagOrDraft"
  },
  "build": {
    "extraFiles": [
      "programmers"
    ],
    "directories": {
      "output": "release"
    },
    "appId": "com.qmk.configurator",
    "mac": {
      "category": "Utilty",
      "target": [
        "default"
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "deb",
        "apk",
        "pacman",
        "tar.xz"
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "portable",
        "nsis",
        "zip"
      ]
    },
    "deb": {
      "depends": ["dfu-programmer", "dfu-util", "teensy-loader-cli", "avrdude"],
      "fpm": ["--after-upgrade=build/postinstall.sh"]
    },
    "apk": {
      "depends": ["dfu-programmer", "dfu-util", "teensy-loader-cli", "avrdude"],
      "fpm": ["--after-upgrade=build/postinstall.sh"]
    },
    "pacman": {
      "depends": ["dfu-programmer", "dfu-util", "teensy-loader-cli", "avrdude"],
      "fpm": ["--after-upgrade=build/postinstall.sh"]
    },
    "files": [
      "src/",
      "package.json"
    ]
  },
  "devDependencies": {
    "electron": "^4.2.9",
    "avrgirl-arduino": "^3.0.2",
    "electron-builder": "^20.44.4",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.13.0",
    "jsdoc": "^3.6.3"
  },
  "dependencies": {
    "electron-log": "^3.0.7",
    "electron-prompt": "^1.3.1",
    "electron-updater": "^4.1.2",
    "follow-redirects": "^1.7.0",
    "hid-listen": "github:zvecr/hid-listen",
    "temp": "^0.9.0",
    "usb": "^1.6.0"
  }
}
