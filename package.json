{
  "name": "qmk_configurator_electron",
  "version": "0.0.1",
  "main": "./src/main.js",
  "author": "Elliot Powell <johnp8727@gmail.com>",
  "repository": "https://github.com/e11i0t23/qmk_configurator_electron.git",
  "scripts": {
    "start": "electron ./src/main",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --x64",
    "gh-publish": "electron-builder --x64 --mac -p always"
  },
  "build": {
    "appId": "com.qmk.configurator",
    "mac": {
      "category": "qmk.config.flash"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "files": [
      "src/"
    ],
    "extraResources": [
      "programmers/"
    ]
  },
  "devDependencies": {
    "electron": "^4.1.3",
    "electron-builder": "^20.39.0"
  },
  "dependencies": {
    "follow-redirects": "^1.7.0",
    "hid-listen": "github:zvecr/hid-listen",
    "temp": "^0.9.0",
    "usb": "^1.5.0"
  }
}
