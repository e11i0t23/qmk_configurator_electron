{
  "name": "qmk_configurator_electron",
  "version": "0.1.0",
  "main": "dist/main.js",
  "author": {
    "name": "Elliot Powell",
    "email": "johnp8727@gmail.com"
  },
  "description": "A layout building and flashing tool for QMK firmware",
  "repository": "https://github.com/e11i0t23/qmk_configurator_electron.git",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "postinstall": "electron-builder install-app-deps",
    "start": "npm run build && electron ./dist/main.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --publish onTagOrDraft"
  },
  "build": {
    "extraFiles": [
      "programmers/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "appId": "com.qmk.configurator",
    "mac": {
      "category": "Utility",
      "target": [
        "default"
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "deb",
        "pacman",
        "tar.xz"
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "portable",
        "nsis"
      ]
    },
    "deb": {
      "depends": [
        "dfu-programmer",
        "dfu-util",
        "teensy-loader-cli",
        "avrdude"
      ],
      "afterInstall": "./build/postinstall.sh"
    },
    "pacman": {
      "depends": [
        "dfu-programmer",
        "dfu-util",
        "teensy-loader-cli",
        "avrdude"
      ],
      "afterInstall": "./build/postinstall.sh"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  },
  "devDependencies": {
    "@types/electron-prompt": "^1.3.0",
    "@types/lodash": "^4.14.146",
    "@types/node": "^12.12.7",
    "@types/usb": "^1.5.1",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "avrgirl-arduino": "^3.0.2",
    "electron": "^7.1.1",
    "electron-builder": "22.1.0",
    "electron-rebuild": "^1.8.6",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.13.0",
    "jsdoc": "^3.6.3",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@serialport/bindings": "3",
    "@types/serialport": "^7.0.4",
    "electron-log": "^3.0.9",
    "electron-prompt": "^1.4.0",
    "electron-updater": "^4.1.2",
    "follow-redirects": "^1.7.0",
    "global": "^4.4.0",
    "hid-listen": "github:zvecr/hid-listen",
    "install": "^0.13.0",
    "lodash": "^4.17.15",
    "node-abi": "^2.12.0",
    "path": "^0.12.7",
    "serialport": "^8.0.5",
    "temp": "^0.9.0",
    "usb": "^1.6.0"
  }
}
