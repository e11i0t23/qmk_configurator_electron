{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "max-len": ["error", { "code": 100 }],
        "linebreak-style":"off",
        "indent": ["error", 2]
    }
}
